@model Library_Management.Models.AddBookViewModel

@{
    ViewData["Title"] = "Add";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add Book</h4>
        </div>
        <div class="card-body">
                    <form asp-action="Add">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ISBN" class="form-label fw-bold"></label>
                            <input asp-for="ISBN" class="form-control" placeholder="e.g. 978-3-16-148410-0" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Short description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Genre" class="form-label fw-bold"></label>
                            <input asp-for="Genre" class="form-control" placeholder="e.g. Fiction" />
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PublishedDate" class="form-label fw-bold"></label>
                            <input asp-for="PublishedDate" class="form-control" type="date" />
                            <span asp-validation-for="PublishedDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CoverImageUrl" class="form-label fw-bold"></label>
                            <input asp-for="CoverImageUrl" class="form-control" placeholder="http://..." />
                            <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Condition" class="form-label fw-bold"></label>
                            <input asp-for="Condition" class="form-control" placeholder="New / Used" />
                            <span asp-validation-for="Condition" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Source" class="form-label fw-bold"></label>
                            <input asp-for="Source" class="form-control" placeholder="Library / Donation" />
                            <span asp-validation-for="Source" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Author" class="form-label fw-bold"></label>
                            <input asp-for="Author" class="form-control" placeholder="Author name" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AuthorProfileImageUrl" class="form-label fw-bold"></label>
                            <input asp-for="AuthorProfileImageUrl" class="form-control" placeholder="http://..." />
                            <span asp-validation-for="AuthorProfileImageUrl" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
 

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
